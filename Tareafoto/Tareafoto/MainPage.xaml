<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tareafoto.MainPage">

    <StackLayout BackgroundColor="White">

        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Fotografia" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>


        <Image x:Name="foto" />
        <Button Text="Tomar Fotografia" x:Name="toma" Clicked="toma_Clicked" BackgroundColor="ForestGreen"/>
        <Button Text="Lista Imagenes"  Clicked="listaImagenes_Clicked" BackgroundColor="DarkBlue"></Button>



    </StackLayout>

</ContentPage>
